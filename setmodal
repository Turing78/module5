function setModal(offer){
  var offer_id = offer.id;
  var img = "./imgs/detail_"+offer_id+".png";
  var text = document.getElementById("text_"+offer_id).innerHTML;

  
  document.getElementById("img_modal").src=img;
  document.getElementById("text_modal").innerHTML=text;
  
  var price=25;
  switch (offer_id) { 
    case "offer2":  
       price=22; 
       break;
  case "offer3":
        price=26;
        break;
  case "offer4":
        price=20;
        break; 
      }

  document.getElementById("price").value=price;
  document.getElementById("price_modal").innerHTML=price.toString()+".00â‚¬";
}
